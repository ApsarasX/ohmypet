}

.weui-uploader__input-box {
    float: left;
    position: absolute;
    left: 0;
    bottom: 0;
    width: 77px;
    height: 77px;
    border: 1px solid #d9d9d9;
    border-radius: 50%;
}
.weui-uploader__input-box:after,
.weui-uploader__input-box:before {
    content: ' ';
    position: absolute;
    top: 50%;
    left: 50%;
    -webkit-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
    background-color: #d9d9d9;
}
.weui-uploader__input-box:before {
    width: 2px;
