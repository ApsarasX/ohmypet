<template>
    <view class="weui-uploader__bd" style="width: {{_width}}px;height: {{_height}}px">
        <view wx:if="{{_poster && files.length===0}}" class="weui-uploader__file" @tap.stop="previewImage" id="{{item}}" style="border-radius: {{_circle ? '50%' : 0}};z-index: 10;" @tap.stop="delPoster">
            <image class="weui-uploader__img" src="{{poster}}" mode="aspectFill" style="border-radius: {{_circle ? '50%' : 0}};width: {{_width-13}}px;height: {{_height-13}}px;"/>
        </view>
        <block wx:for="{{files}}" wx:key="*this"> 
            <view class="weui-uploader__file" @tap.stop="previewImage" id="{{item}}" style="border-radius: {{_circle ? '50%' : 0}};">
                <image class="weui-uploader__img" src="{{item}}" mode="aspectFill" style="border-radius: {{_circle ? '50%' : 0}};width: {{_width-13}}px;height: {{_height-13}}px;"/>
            </view>
        </block>
        <view wx:if="{{files.length===0}}" class="weui-uploader__input-box" style="border-radius: {{_circle ? '50%' : 0}};width: {{_width-13}}px;height: {{_height-13}}px;">
            <view class="weui-uploader__input" @tap.stop="chooseImage"></view>
        </view>
        <icon wx:if="{{files.length!==0}}" @tap="delImage" color="#A9A9A9" class="del-icon" type="cancel" size="26"></icon>
    </view>
</template>

<script>
import wepy from 'wepy';

export default class Uploader extends wepy.component {
    props = {
        width: {
            type: String,
            default: '90'
        },
        height: {
            type: String,
            default: '90'
        },
        poster: String,
        circle: String
    };
    data = {
        _width: 77,
        _height: 77,
        _circle: false,
        _poster: '',
        files: []
    };
    onLoad() {
        this._width = parseInt(this.width);
        this._height = parseInt(this.height);
        this._poster = this.poster;
        this._circle = Boolean(this.circle);
    }
    methods = {
        // 点击+选择图片
        async chooseImage() {
            let res = await wepy.chooseImage({
                sizeType: ['original', 'compressed'], // 可以指定是原图还是压缩图，默认二者都有
                sourceType: ['album', 'camera'] // 可以指定来源是相册还是相机，默认二者都有
            });
            this.files = this.files.concat(res.tempFilePaths);
            this.$apply();
        },
        // 预览图片
        previewImage(e) {
            wepy.previewImage({
                current: e.currentTarget.id, // 当前显示图片的http链接
                urls: this.data.files // 需要预览的图片http链接列表
            });
        },
        // 点击封面删除
        delPoster() {
            this._poster = '';
        },
        // 点击右上角x删除图片
        delImage() {
            this.files = [];
        }
    };
}
</script>

