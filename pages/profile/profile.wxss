.head-container {
  height: 264rpx;
  width: 750rpx;
  overflow: hidden;
  position: relative;
}
.head-container > image {
  transform: scale(1.2);
  width: 100%;
  filter: blur(8rpx);
}
.head-group {
  width: 224rpx;
  height: 200rpx;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.head-group > text {
  font-size: 28rpx;
  color: #FA6650;
}
.head-icon {
  height: 134rpx;
  width: 134rpx;
  overflow: hidden;
  border-radius: 50%;
}
.head-icon > image {
  width: 100%;
  height: 100%;
}
.items-container {
  height: 264rpx;
  width: 750rpx;
}
.item-title {
  width: 750rpx;
  height: 80rpx;
  line-height: 60rpx;
  font-size: 34rpx;
  color: #FA6650;
  margin: 20rpx 0; 
  border-bottom: 1rpx solid rgba(151, 151, 151, 0.1); 
  box-sizing: border-box;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.item-icon-group {
  height: 204rpx;
  width: 750rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.item-icon {
  height: 100rpx;
  width: 120rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.item-icon > image {
  height: 50rpx;
  width: 50rpx;
}
.item-icon > text {
  font-size: 24rpx;
  color: #FA6650;
}