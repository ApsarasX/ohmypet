.msg-container {
  min-height: 1100rpx;
  width: 750rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
.msg {
  height: 120rpx;
  width: 750rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 10rpx 0;
}
.msg-head {
  height: 80rpx;
  width: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  margin: 0 20rpx;
}
.msg-head > image {
  width: 100%;
  height: 100%;
}
.msg-body {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  border-bottom: 1rpx solid rgba(151, 151, 151, 0.3);
}
.user-name {
  width: 100%;
  font-size: 34rpx;
  color: #404040;
  font-weight: bold;
}
.msg-text {
  font-size: 28rpx;
  color: #404040;
  opacity: 0.5;
}
.msg-time {
  font-size: 22rpx;
  color: #404040;
  opacity: 0.5;
}